{
  "name": "node-ble-scanner",
  "version": "1.0.0",
  "description": "A Node.js application for scanning and connecting to Bluetooth Low Energy (BLE) devices with a web-based interface",
  "main": "server.js",
  "scripts": {
    "dev": "PORT=3000 nodemon server.js",
    "client:dev": "npm run dev --prefix client",
